APP_ENV=development
APP_DEBUG=1
APP_URL=http://localhost:8080

# CORS Configuration
# 开发环境：允许所有来源（仅用于本地开发）
# FRONTEND_ORIGIN=*
# 生产环境：指定具体域名（多个域名用逗号分隔）
# FRONTEND_ORIGIN=https://blog.example.com,https://www.blog.example.com
# 开发+生产混合：包含localhost和生产域名
FRONTEND_ORIGIN=http://localhost:4321,http://127.0.0.1:4321,http://localhost:3000,https://p-blog-frontend.pages.dev,https://pyq.3331322.xyz,https://p-memory-lane.pages.dev,https://yourdomain.com

# Redis (optional)
# Production default: enabled (if PHP redis extension is installed and Redis is reachable)
# To disable in production:
# REDIS_ENABLED=0
REDIS_ENABLED=1
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=pweibo:
REDIS_TIMEOUT=0.2
REDIS_PERSISTENT=1

# Integrations encryption key (optional but recommended)
# Recommended: base64-encoded 32 bytes. If unset, backend derives from JWT secrets.
# Example generation:
#   python3 - << 'PY'\n# import os,base64\n# print(base64.b64encode(os.urandom(32)).decode())\n# PY
# INTEGRATIONS_ENC_KEY=...

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=weibo_clone
DB_USER=root
DB_PASS=rootpassword
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
# TTL in seconds (default: access 900=15min, refresh 1209600=14d)
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600
# Allow a short grace window to avoid concurrent refresh causing forced logout
JWT_REFRESH_REUSE_GRACE_SECONDS=10

# Cookie Configuration (for cross-site frontends, use SameSite=None + Secure=true)
# COOKIE_DOMAIN=.yourdomain.com
COOKIE_SAMESITE=None
COOKIE_SECURE=true

# Upload Configuration
UPLOAD_PATH=/var/www/project/public/uploads
MAX_IMAGE_MB=10
MAX_VIDEO_MB=100

# Log Configuration
LOG_PATH=/var/www/project/logs

# Admin Account Configuration (Single-User System)
# Change these values for your deployment
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-strong-password
ADMIN_DISPLAY_NAME=Admin
