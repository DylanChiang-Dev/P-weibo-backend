APP_ENV=development
APP_URL=http://localhost:8080

# CORS Configuration
# 开发环境：允许所有来源（仅用于本地开发）
# FRONTEND_ORIGIN=*
# 生产环境：指定具体域名（多个域名用逗号分隔）
# FRONTEND_ORIGIN=https://blog.example.com,https://www.blog.example.com
# 开发+生产混合：包含localhost和生产域名
FRONTEND_ORIGIN=http://localhost:4321,http://localhost:3000,https://yourdomain.com

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=weibo_clone
DB_USER=root
DB_PASS=rootpassword
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=1209600

# Upload Configuration
UPLOAD_PATH=/var/www/project/storage/uploads
MAX_IMAGE_MB=10
MAX_VIDEO_MB=100

# Log Configuration
LOG_PATH=/var/www/project/logs

# Admin Account Configuration (Single-User System)
# Change these values for your deployment
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-strong-password
ADMIN_DISPLAY_NAME=Admin
